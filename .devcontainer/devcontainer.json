{
  "name": "Plex-Organizer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/testData,target=${containerWorkspaceFolder}/testData,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/testEnv,target=${containerWorkspaceFolder}/testEnv,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "python3 -m venv venv && ./venv/bin/python -m pip install --upgrade pip && ./venv/bin/python -m pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {
        "python.venvPath": "venv",
        "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.terminal.activateEnvInCurrentTerminal": true,
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "sonarlint.connectedMode.project": {
          "connectionId": "toomas633",
          "projectKey": "Toomas633_Plex-Organizer"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.black-formatter",
        "ms-python.pylint",
        "ms-python.autopep8",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "docker.docker",
        "pkief.material-icon-theme",
        "kevinrose.vsc-python-indent",
        "github.vscode-github-actions",
        "github.copilot-chat",
        "ms-python.isort",
        "magicstack.magicpython",
        "christian-kohler.path-intellisense",
        "esbenp.prettier-vscode",
        "donjayamanne.python-environment-manager",
        "sonarsource.sonarlint-vscode",
        "njpwerner.autodocstring",
        "cweijan.vscode-office"
      ]
    }
  }
}
